{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "simple-mcp/build",
    "rootDir": "simple-mcp/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["simple-mcp/src/**/*"],
  "exclude": ["node_modules"]
}